  <link rel="stylesheet" href="/public/main.css">

  <title>Hello, world!</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">TodoApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/write">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">임시</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <h4 class="ml-2 my-3">서버에서 가져온 할일 리스트</h4>
  <div class="container">
    <ul class="list-group">

      <% for (let i=0; i <posts.length ; i++){ %>
        <li class="list-group-item">
          <p>글번호 : <%= posts[i]_id %>
          </p>
          <h4>할일 제목 : >%= posts[i].제목 %></h4>
          <p>할일 마감날짜 : <%= posts[i].날짜 %>
          </p>
          <button class="btn btn-danger delete" data-id="<%= posts[i]_id %>">삭제</button>
        </li>
        <% } %>
    </ul>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
  <script>

    $('.delete').click(function (e) {
      let textNumber = e.target.dataset.id;
      let nowClick = $(this); //e.target 내가 누른요소임 내가누른요소의 data-id임
      $.ajax({
        method: "DELETE",
        url: '/delete',
        data: { _id: textNumber }
      }).done(function (result) {
        //페이지를 강제로 새로고침하셈
        //삭제버튼을 누른 <li>요소를 안보이게 제거하셈
        console.log('성공했어염')
        nowClick.parent('li').fadeOut();
      }).fail(function (xhr, textStatus, errorThrown) {
        console.log(xhr, textStatus, errorThrown)
        //xhr textStatus 응답코드를 알려줌 errorThrown 에러오류를 알려줌
      });
    })



  </script>


